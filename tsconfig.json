{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "typeRoots": ["node_modules/@types"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "lib": ["es2019", "dom"],
    "sourceMap": true,
    "target": "ES2019",
    "watch": true,
    "outFile": "dist/main.js"
  },
  "exclude": ["node_modules"]
}
